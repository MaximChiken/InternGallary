<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/error_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/no_internet"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/error_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oh_shucks"
        android:layout_centerHorizontal="true"
        android:text="@string/error_massage"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/oh_shucks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oh_shucks"
        android:textSize="30sp"
        android:layout_below="@+id/error_picture"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>